@{
    Layout = "_AuthLayout";
}

<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5" ng-controller="registerCtrl">
        <div class="card-body p-0" block-ui="uiBlock">

            @await Html.PartialAsync("_FormTitle")

            <div class="row">
                <div class="col-lg-12">
                    <div class="p-5">
                        <form class="user"
                              ng-submit="onRegister(newItem)"
                              name="regForm"
                              id="regForm">
                            <div class="form-group row">
                                <label for="UserName"
                                       class="col-form-label col-md-2">
                                    Tên đăng nhập <span class="text-danger">(*)</span>
                                </label>
                                <div class="col-md-10">
                                    <input type="text"
                                           class="form-control"
                                           ng-model="newItem.UserName"
                                           name="UserName"
                                           validation="required|max_len:128"
                                           placeholder="Tên đăng nhập">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="UserName"
                                       class="col-form-label col-md-2">
                                    Mật khẩu <span class="text-danger">(*)</span>
                                </label>
                                <div class="col-md-4">
                                    <input type="password"
                                           class="form-control"
                                           ng-model="newItem.Password"
                                           name="Password"
                                           validation="required|max_len:128"
                                           placeholder="Mật khẩu">
                                </div>
                                <label for="UserName"
                                       class="col-form-label col-md-2">
                                    Xác nhận mật khẩu <span class="text-danger">(*)</span>
                                </label>
                                <div class="col-md-4">
                                    <input type="password"
                                           class="form-control"
                                           ng-model="newItem.ConfirmPassword"
                                           name="ConfirmPassword"
                                           validation="required|max_len:128|match:newItem.Password"
                                           placeholder="Xác nhận mật khẩu">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-12 text-center">
                                    <button type="submit"
                                            ng-disabled="regForm.$invalid"
                                            class="btn btn-primary btn-user">
                                        Tạo tài khoản
                                    </button>
                                </div>
                            </div>
                        </form>
                        <hr>
                        <div class="text-center d-none">
                            <a class="small" href="forgot-password.html">Quên mật khẩu?</a>
                        </div>
                        <div class="text-center">
                            <a class="small" href="@Url.Action("Login","Auth")">Đăng nhập</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/controllers/registerCtrl.js"></script>
    <script src="~/js/services/auth-servives.js"></script>
    <script src="~/js/services/core-service.js"></script>
}

