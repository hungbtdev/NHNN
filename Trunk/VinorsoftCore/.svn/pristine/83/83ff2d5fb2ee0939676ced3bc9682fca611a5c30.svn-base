
@(Html.DevExtreme().DataGrid<PermitObjectPermissionDTO>()
    .DataSource(d => d.Mvc().LoadAction("GetUserGroupPermit").LoadParams(new { groupId = new JS("function() { return data.Id; }") }).Key("Id"))
    .Columns(col =>
    {
        col.AddFor(m => m.PermitObjects.Name).Caption(Vinorsoft.Core.Resx.AuthResource.PermitObjectPermission_PermitObject).GroupIndex(0);
        col.AddFor(m => m.Permissions.Name).Caption(Vinorsoft.Core.Resx.AuthResource.PermitObjectPermission_Permission);
    })
    .Grouping(grouping => grouping.AutoExpandAll(false))
    .GroupPanel(groupPanel => groupPanel.Visible(true))
)
