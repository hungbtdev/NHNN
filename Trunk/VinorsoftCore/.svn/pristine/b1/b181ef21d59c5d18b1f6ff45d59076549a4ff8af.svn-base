* {
    font-family: -sans-serif;
    font-size: small;
}

body {
    padding-top: 5rem;
    padding-bottom: 100px;
}

.dx-menu-base .dx-menu-item .dx-menu-item-content .dx-icon {
    font-size: small;
}

.dx-datagrid-content .highlight {
    background-color: #E4EAEB;
}

.dx-datagrid-total-footer .highlight {
    background-color: white;
}

.dx-datagrid-summary-item {
    overflow: visible;
}

.dx-datagrid-headers td {
    vertical-align: middle !important;
    text-align: center !important;
    color: black;
    font-size: large !important;
    font-weight: bold;
}

.bg-light {
    background-color: #0b68a4 !important;
    color: white;
}

#menu .dx-menu-item {
    color: white;
    background-color: #0b68a4;
}

#menu .dx-item.dx-menu-item.dx-menu-item-has-text.dx-menu-item-has-submenu.dx-menu-item-expanded {
    background-color: #0b68a4;
}

#menu .dx-menu-item.dx-state-hover {
    color: white;
    background-color: #2F81C9;
}

#menu .dx-menu-item.dx-state-focused {
    background-color: #0b68a4;
    color: white;
}

.footer {
    z-index: 1024;
    padding-top: 20px;
    position: fixed;
    bottom: 0;
    font-size: small;
    width: 100%;
    height: 80px; /* Set the fixed height of the footer here */
}

.footer-logo {
    width: 64px;
    margin-top: -15px;
}

.navbar-logo {
    width: 40px;
    height: 32px;
}

#login-menu button.btn.dropdown-toggle {
    color: white;
}

/*10-02-2020*/

#fileuploader-container {
    border: 1px solid #d3d3d3;
}

.dx-numberbox input {
    text-align: end !important;
}

img {
    object-fit:cover;
}

a.top_menu_link {
    color: inherit;
    text-decoration: none;
}

.h-200 {
    height: 200px
}