@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .dataTables_wrapper.form-inline {
        display: inherit;
        display: inherit;
        display: inherit;
        -webkit-box-orient: inherit;
        -webkit-box-direction: inherit;
        -ms-flex-flow: inherit;
        flex-flow: inherit;
        -webkit-box-align: inherit;
        -ms-flex-align: inherit;
        align-items: inherit;
    }

    a.dt-button {
        margin-right: 5px;
    }
    .dataTables_length select {
        border: 1px solid #E4E4E4;
        border-radius: 3px;
        margin-right: 5px;
    }

    .dataTables_length, .dataTables_filter {
        display: contents;
    }
    /*.dataTables_filter input[type=search] {
        border: 1px solid #E4E4E4;
        border-radius: 3px;
        margin-right: -15px;
        min-width: 320px;
    }*/

</style>

<div ng-controller="coreCtrl as coreCtrl">
    <div class="card o-hidden border-0 shadow-lg p-2">
        <div class="card-body p-0" block-ui="uiBlock" ng-init="onGetData()">
            @await Html.PartialAsync("_FormTitle")

            @*@await Html.PartialAsync("_FormSearch")*@


            <div class="row">
                <div class="col-lg-12">

                    <table datatable
                           dt-options="coreCtrl.dtOptions"
                           dt-columns="coreCtrl.dtColumns"
                           class="table table-hover table-bordered"></table>

                    <table class="table table-hover table-bordered" ng-if="false">
                        <thead>
                            <tr>
                                <th width="50">#</th>
                                <th>Mã</th>
                                <th>Tên </th>
                                <th>Mô tả</th>
                                <th width="50"></th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr ng-repeat="item in dataPage.Items">
                                <td>
                                    {{$index + 1}}
                                </td>
                                <td>
                                    <a href="@Url.Action("UpdateItem")?id={{item.Id}}">
                                        {{item.Code}}
                                    </a>
                                </td>
                                <td>
                                    {{item.Name}}
                                </td>
                                <td>
                                    {{item.Description}}
                                </td>
                                <td class="text-right">
                                    <button type="button"
                                            ng-click="onDelete(item)"
                                            uib-tooltip="Xóa"
                                            class="btn btn-danger btn-sm">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        </tbody>

                    </table>
                </div>
            </div>

            @*@await Html.PartialAsync("_FormFooter")*@

            @*@await Html.PartialAsync("_FormPaging")*@

        </div>
    </div>

</div>

@section Scripts{
    @await Html.PartialAsync("_CatalogueScripts")
}

