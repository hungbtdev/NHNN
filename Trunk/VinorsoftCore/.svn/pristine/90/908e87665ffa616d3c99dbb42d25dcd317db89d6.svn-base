form.user .form-control-user {
    padding: 4px 8px;
}

.form-control:focus {
    box-shadow: none;
}

html, body {
    font-size: small !important;
    /*font-family: 'Times New Roman', Times, serif !important;*/
    font-family: Tahoma, Geneva, sans-serif !important;
}

.sidebar-dark .sidebar-heading {
    color: white !important;
    font-size:inherit;
}

@media (min-width: 768px) {
    .sidebar {
        width: 18rem !important;
        overflow-y: auto;
    }
}

span.select2-selection.select2-selection--single {
    height: calc(1.5em + .75rem + 2px);
}

.select2-container--default .select2-selection--single .select2-selection__rendered {
    line-height: 32px;
}

/*Hành vi vi phạm*/
.objectType label.ng-binding {
    margin-right: 30px;
}

label.col-form-label.ng-invalid.ng-invalid-required.ng-dirty {
    border-left: none;
}

.collapse {
    visibility: unset;
}

.required {
    color: red;
    /*font-weight: bold;*/
}

.fade {
    opacity: inherit
}

.p-10 {
    padding: 10px !important;
}

.w-300 {
    width: 300px !important;
}

.dataTables_wrapper .row {
    margin-right: 5px;

}

.dataTable th input, select {
    margin-bottom: 5px;
}

.navbar {
    border-radius: 0px;
}


.topbar.navbar-light .navbar-nav .nav-item .nav-link {
    color: white;
}

.table {
    color: #000000;
}

thead tr:first-child th {
    text-align: center;
    color: white;
    background-color: #4e73df !important;
    background-image: -webkit-gradient(linear,left top,left bottom,color-stop(10%,#4e73df),to(#224abe)) !important;
    background-image: linear-gradient(180deg,#4e73df 10%,#224abe 100%) !important;
    background-size: cover;
    vertical-align: middle;
}

.table-n-th thead tr th {
    text-align: center;
    color: white;
    background-color: #4e73df !important;
    background-image: -webkit-gradient(linear,left top,left bottom,color-stop(10%,#4e73df),to(#224abe)) !important;
    background-image: linear-gradient(180deg,#4e73df 10%,#224abe 100%) !important;
    background-size: cover;
    vertical-align: middle;
}


::-webkit-scrollbar {
    width: 12px;
}

::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
    border-radius: 10px;
}

::-webkit-scrollbar-thumb {
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5);
}