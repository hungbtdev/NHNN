@{
    ViewData["Title"] = ViewData["StatusCode"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- 404 Error Text -->
<div class="text-center">
    <div class="error mx-auto" data-text="@ViewData["StatusCode"]">@ViewData["StatusCode"]</div>
    <p class="lead text-gray-800 mb-5">@ViewData["ErrorMessage"]</p>
</div>
