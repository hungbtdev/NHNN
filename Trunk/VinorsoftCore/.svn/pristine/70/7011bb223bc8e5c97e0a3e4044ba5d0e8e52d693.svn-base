<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">
                <h1>
                    Oops!
                </h1>
                <h2>
                    403 Forbidden
                </h2>
                <div class="error-details">
                    Xin lỗi, đã xảy ra lỗi, Bạn không có quyền truy cập chức năng này!
                </div>
                <div class="error-actions">
                    <a href="@Url.Action("Index","Home", new { Area = string.Empty})" class="btn btn-primary btn-lg">
                        <span class="glyphicon glyphicon-home"></span>
                        @Resources.Back_To_Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_Styles")