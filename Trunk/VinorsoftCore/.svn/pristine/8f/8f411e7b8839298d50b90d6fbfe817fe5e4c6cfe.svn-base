@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="coreCtrl"
     ng-init="onInit()">
    <div class="card o-hidden border-0 shadow-lg p-2">
        <div block-ui="uiBlock">
            @await Html.PartialAsync("_FormTitle")

            <form name="newForm"
                  id="newForm"
                  class="user">

                <!--Mã/Tên-->
                <div class="form-group row">
                    <div class="col-sm-4">
                        <label for="SmtpServer"
                               class="col-form-label">
                            SmtpServer <span class="text-danger">(*)</span>
                        </label>
                        <input type="text"
                               class="form-control"
                               ng-model="newItem.SmtpServer"
                               name="SmtpServer"
                               validation="required|max_len:255"
                               placeholder="SmtpServer">
                    </div>

                    <div class="col-sm-4">
                        <label for="Port"
                               class="col-form-label">
                            Port <span class="text-danger">(*)</span>
                        </label>
                        <input type="number"
                               class="form-control"
                               ng-model="newItem.Port"
                               name="Port"
                               validation="required"
                               placeholder="Port">
                    </div>

                    <div class="col-sm-4">
                        <label for="EnableSsl">
                            &nbsp;
                        </label>

                        <div class="icheck-primary">
                            <input type="checkbox"
                                   ng-model="newItem.EnableSsl"
                                   id="EnableSsl"
                                   name="EnableSsl" />
                            <label for="EnableSsl">
                                Enable Ssl
                            </label>
                        </div>
                    </div>
                </div>

                <!--Mã/Tên-->
                <div class="form-group row">
                    <div class="col-sm-3">
                        <label for="Email"
                               class="col-form-label">
                            Email <span class="text-danger">(*)</span>
                        </label>
                        <input type="text"
                               class="form-control"
                               ng-model="newItem.Email"
                               name="Email"
                               validation="required|max_len:128"
                               placeholder="Email">
                    </div>


                    <div class="col-sm-3">
                        <label for="DisplayName"
                               class="col-form-label">
                            Tên hiển thị <span class="text-danger">(*)</span>
                        </label>
                        <input type="text"
                               class="form-control"
                               ng-model="newItem.DisplayName"
                               name="DisplayName"
                               validation="required|max_len:128"
                               placeholder="DisplayName">
                    </div>

                    <div class="col-sm-3">
                        <label for="UserName"
                               class="col-form-label">
                            Tên đăng nhập <span class="text-danger">(*)</span>
                        </label>
                        <input type="text"
                               class="form-control"
                               ng-model="newItem.UserName"
                               name="UserName"
                               validation="required|max_len:128"
                               placeholder="UserName">
                    </div>

                    <div class="col-sm-3">
                        <label for="Password"
                               class="col-form-label">
                            Password <span class="text-danger">(*)</span>
                        </label>
                        <input type="password"
                               class="form-control"
                               ng-model="newItem.Password"
                               name="Password"
                               validation="required"
                               placeholder="Password">
                    </div>
                </div>
                <!--Button Save-->
                @await Html.PartialAsync("_CatalogueButtons")

            </form>
        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_CatalogueScripts")
}
