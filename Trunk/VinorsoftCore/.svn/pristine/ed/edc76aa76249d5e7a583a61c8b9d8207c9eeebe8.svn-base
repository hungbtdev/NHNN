@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="coreCtrl"
     ng-init="onInit()">
    <div class="card o-hidden border-0 shadow-lg p-2">
        <div block-ui="uiBlock">
            @await Html.PartialAsync("_FormTitle")

            <form name="newForm"
                  id="newForm"
                  class="user">

                <!--Mã/Tên-->
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label for="Subject"
                               class="col-form-label">
                            Subject <span class="text-danger">(*)</span>
                        </label>
                        <input type="text"
                               class="form-control"
                               ng-model="newItem.Subject"
                               name="Subject"
                               validation="required|max_len:1000"
                               placeholder="Subject">
                    </div>
                </div>

                <div class="form-group row">

                    <div class="col-sm-12">
                        <label for="EmailTo"
                               class="col-form-label">
                            To <span class="text-danger">(*)</span>
                        </label>
                        <input type="text"
                               class="form-control"
                               ng-model="newItem.EmailTo"
                               name="EmailTo"
                               validation="required"
                               placeholder="To">
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-12">
                        <label for="CC"
                               class="col-form-label">
                            CC 
                        </label>
                        <input type="text"
                               class="form-control"
                               ng-model="newItem.CC"
                               name="CC"
                               placeholder="CC">
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-12">
                        <label for="BCC"
                               class="col-form-label">
                            BCC
                        </label>
                        <input type="text"
                               class="form-control"
                               ng-model="newItem.BCC"
                               name="BCC"
                               placeholder="BCC">
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-4">
                        <label for="StatusId"
                               class="col-form-label">
                            Trạng thái <span class="text-danger">(*)</span>
                        </label>
                        <select ui-select2
                                style="width:100%"
                                id="StatusId"
                                name="StatusId"
                                validation="required"
                                ng-options="opt.Id as opt.Name for opt in InitData.NotificationStatus"
                                ng-model="newItem.StatusId"
                                class="form-control"></select>
                    </div>
                </div>

                <!--Mã/Tên-->
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label for="Body"
                               class="col-form-label">
                            Nội dung <span class="text-danger">(*)</span>
                        </label>
                        <text-angular ng-model="newItem.Body"
                                      name="Body"
                                      validation="required"
                                      placeholder="Nội dung"></text-angular>
                    </div>
                </div>
                <!--Button Save-->
                @await Html.PartialAsync("_CatalogueButtons")

            </form>
        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_CatalogueScripts")
}
