@model PermitObjectDTO

@(Html.DevExtreme().Form<PermitObjectDTO>().ColCount(2).FormData(new JS("data")).Items(items =>{
    items.AddGroup().Caption(Resources.Controller_List).Items(groupItems =>
    {
        groupItems.AddSimpleFor(m => m.ControllerList)
        .Editor(e => e.TagBox().DataSource(d => d.Mvc().LoadAction("GetControllers").Key("Id")).DisplayExpr("Name").ValueExpr("Id").ReadOnly(true).Placeholder(Resources.Dropdown_Placeholder)).ColSpan(2);
    }).ColSpan(1);

    items.AddGroup().Caption(Resources.Sidebar_List).Items(groupItems =>
    {
        groupItems.AddSimpleFor(m => m.DisplayGridSidebars).Editor(e => e.TagBox().DataSource(d => d.Mvc().LoadAction("GetSideBars").Key("Id")).DisplayExpr("Name").ValueExpr("Id").ReadOnly(true).Placeholder(Resources.Dropdown_Placeholder)).ColSpan(2);
    }).ColSpan(1);

})
)
