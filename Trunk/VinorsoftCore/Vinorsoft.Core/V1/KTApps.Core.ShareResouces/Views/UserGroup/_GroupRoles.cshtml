<div class="row">
    <div class="col-lg-12">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <td colspan="6">
                        <div class="row">
                            <div class="col-md-4 text-right">
                                <select placeholder="Vai trò"
                                        ui-select2
                                        name="RoleId"
                                        ng-options="item.Id as item.Name for item in InitData.Roles"
                                        ng-model="selectedItem.RoleId"
                                        class="form-control"></select>
                            </div>

                            <div class="col-md-2">
                                <button type="button"
                                        ng-disabled="selectedItem==null"
                                        tooltip-append-to-body="true"
                                        ng-click="onRoleSelected(selectedItem)"
                                        uib-tooltip="Thêm"
                                        class="btn btn-primary">
                                    <i class="fa fa-check-circle"></i>
                                </button>
                                <button type="button"
                                        tooltip-append-to-body="true"
                                        ng-click="onRoleSelectedAll()"
                                        uib-tooltip="Thêm"
                                        class="btn btn-primary">
                                    <i class="fa fa-check-double"></i>
                                </button>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th width="50">#</th>
                    <th width="120">Mã</th>
                    <th>Vai trò </th>
                    <th width="50"></th>
                </tr>
            </thead>

            <tbody>
                <tr ng-repeat="item in newItem.UserGroupRoles | filter :{ Deleted:false }">
                    <td>
                        {{$index + 1}}
                    </td>
                    <td>
                        {{item.Roles.Code}}
                    </td>
                    <td>
                        {{item.Roles.Name}}
                    </td>
                    <td class="text-right">
                        <button type="button"
                                ng-click="onDeleteItem(item)"
                                uib-tooltip="Xóa"
                                class="btn btn-danger btn-sm">
                            <i class="fa fa-trash"></i>
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>