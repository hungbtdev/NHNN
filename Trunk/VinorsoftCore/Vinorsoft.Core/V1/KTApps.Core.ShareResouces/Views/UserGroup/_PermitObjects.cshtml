<div class="row">
    <div class="col-lg-12">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th width="50">#</th>
                    <th>Chức năng <span class="text-danger">(*)</span></th>
                    <th>Quyền</th>
                    <th width="50">

                    </th>
                </tr>
            </thead>

            <tbody>
                <tr ng-repeat="item in newItem.PermitObjectGroups | filter : { Deleted: false}">
                    <td>
                        {{$index + 1}}
                    </td>
                    <td>
                        <select ui-select2
                                validation="required"
                                style="width:100%"
                                ng-change="onPermitObjectChange(item)"
                                id="PermitObject-{{$index}}"
                                name="PermitObject-{{$index}}"
                                ng-options="opt.Id as opt.Name for opt in InitData.PermitObjects"
                                ng-model="item.PermitObjectId"
                                class="form-control"></select>
                    </td>
                    <td>
                        <select ui-select2
                                multiple
                                style="width:100%"
                                id="Permissions-{{$index}}"
                                name="Permissions-{{$index}}"
                                ng-options="opt.Id as opt.Name for opt in InitData.Permissions"
                                ng-model="item.PermissionIds"
                                class="form-control"></select>
                    </td>

                    <td class="text-center">
                        <button type="button"
                                ng-click="onDeleteItem(item)"
                                uib-tooltip="Xóa"
                                class="btn btn-danger btn-sm">
                            <i class="fa fa-trash"></i>
                        </button>
                    </td>
                </tr>
            </tbody>

            <tfoot>
                <tr>
                    <td colspan="6"
                        class="text-right">
                        <button type="button"
                                ng-click="onAddPermitObject()"
                                uib-tooltip="Thêm"
                                class="btn btn-primary btn-sm">
                            <i class="fa fa-plus"></i>
                        </button>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>