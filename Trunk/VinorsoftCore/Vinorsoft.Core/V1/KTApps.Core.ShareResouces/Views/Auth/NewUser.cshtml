@{
    Layout = "_Layout";
}

<div class="card o-hidden border-0 shadow-lg p-2" ng-controller="userCtrl">
    <div block-ui="uiBlock" ng-init="onInit()">

        @await Html.PartialAsync("_FormTitle")

        <div class="row">
            <div class="col-lg-12">
                <form class="user"
                      ng-submit="onSave(newItem)"
                      name="userForm"
                      id="userForm">

                    @await Html.PartialAsync("_AccountInfo")

                    <div class="form-group row">
                        <label for="Username"
                               class="col-form-label col-md-2">
                            Tên đăng nhập <span class="text-danger">(*)</span>
                        </label>
                        <div class="col-md-10">
                            <input type="text"
                                   class="form-control"
                                   ng-model="newItem.Username"
                                   name="Username"
                                   validation="required|max_len:128"
                                   placeholder="Tên đăng nhập">
                        </div>
                    </div>

                    @await Html.PartialAsync("_Password")

                    @await Html.PartialAsync("_UserDepartments")

                    <div class="form-group row">
                        <div class="col-md-12 text-right">
                            <button type="button"
                                    onclick="backToList()"
                                    class="btn btn-primary btn-user">
                                Đóng
                            </button>
                            <button type="submit"
                                    ng-disabled="userForm.$invalid"
                                    class="btn btn-primary btn-user">
                                Lưu thông tin
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script src="~/js/controllers/userCtrl.js"></script>
    <script src="~/js/controllers/core/coreCtrl.js"></script>
    <script src="~/js/services/auth-servives.js"></script>
    <script src="~/js/services/core-service.js"></script>
}

