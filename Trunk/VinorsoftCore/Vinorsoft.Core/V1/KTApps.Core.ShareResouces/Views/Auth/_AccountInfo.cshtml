<div class="form-group row">
    <div class="col-sm-12">
        <label for="UserGroupIds"
               class="col-form-label">
            Chọn nhóm người dùng (nếu có)
        </label>

        <select ui-select2
                multiple
                style="width:100%"
                id="UserGroupIds"
                name="UserGroupIds"
                ng-options="opt.Id as opt.Name for opt in InitData.UserGroups"
                ng-model="newItem.UserGroupIds"
                class="form-control"></select>
    </div>
</div>


<div class="form-group row">
    <label for="FailedCount"
           class="col-form-label col-md-2">
        Số lần đăng nhập sai
    </label>
    <div class="col-md-4">
        <input type="number"
               readonly
               class="form-control"
               ng-model="newItem.FailedCount"
               name="FailedCount"
               placeholder="Số lần đăng nhập sai">
    </div>
</div>


