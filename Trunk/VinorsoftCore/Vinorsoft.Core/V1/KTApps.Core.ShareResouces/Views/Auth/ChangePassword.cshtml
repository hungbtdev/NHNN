@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center" ng-controller="loginCtrl">
    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg p-2">
            <div block-ui="loginBlock">

                @await Html.PartialAsync("_FormTitle")

                <div class="row">
                    <div class="col-lg-2 d-none d-lg-block"></div>
                    <div class="col-lg-8">
                        <div class="p-5">
                            <form class="user"
                                  name="changPasswordForm"
                                  id="changPasswordForm">
                                <div class="form-group row">
                                    <label for="Password"
                                           class="col-form-label col-md-4">
                                        Mật khẩu cũ <span class="text-danger">(*)</span>
                                    </label>
                                    <div class="col-md-8">
                                        <input type="password"
                                               ng-model="changePasswordModel.Password"
                                               name="Password"
                                               validation="required|max_len:128"
                                               class="form-control"
                                               placeholder="Mật khẩu cũ">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="NewPassword"
                                           class="col-form-label col-md-4">
                                        Mật khẩu mới <span class="text-danger">(*)</span>
                                    </label>
                                    <div class="col-md-8">
                                        <input type="password"
                                               ng-model="changePasswordModel.NewPassword"
                                               name="NewPassword"
                                               validation="required|max_len:128"
                                               class="form-control"
                                               placeholder="Mật khẩu mới">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="ConfirmPassword"
                                           class="col-form-label col-md-4">
                                        Xác nhận mật khẩu <span class="text-danger">(*)</span>
                                    </label>
                                    <div class="col-md-8">
                                        <input type="password"
                                               ng-model="changePasswordModel.ConfirmPassword"
                                               name="ConfirmPassword"
                                               validation="required|max_len:128"
                                               class="form-control"
                                               placeholder="Xác nhận mật khẩu">
                                    </div>
                                </div>

                                <button type="button"
                                        ng-click="onChangePassword(changePasswordModel)"
                                        ng-disabled="changPasswordForm.$invalid"
                                        class="btn btn-primary btn-user float-right">
                                    Đổi mật khẩu
                                </button>

                            </form>
                        </div>
                    </div>
                    <div class="col-lg-2 d-none d-lg-block"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/controllers/loginCtrl.js"></script>
    <script src="~/js/services/auth-servives.js"></script>
    <script src="~/js/services/core-service.js"></script>
}
