@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="userCtrl as coreCtrl">
    <div class="card o-hidden border-0 shadow-lg p-2">
        <div class="card-body p-0" block-ui="uiBlock">

            @await Html.PartialAsync("_FormTitle")

            <div class="row">
                <div class="col-lg-12" id="c-row">
                    <table datatable
                           dt-options="coreCtrl.dtOptions"
                           dt-columns="coreCtrl.dtColumns"
                           dt-instance="coreCtrl.dtInstance"
                           class="table table-hover table-bordered"></table>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/controllers/core/coreCtrl.js"></script>
    <script src="~/js/controllers/userCtrl.js"></script>
    <script src="~/js/services/auth-servives.js"></script>
    <script src="~/js/services/core-service.js"></script>
}


