<div class="row">
    <div class="col-lg-12">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th colspan="8"
                        class="text-right">
                        <button type="button"
                                ng-click="onAddUserDepartment()"
                                uib-tooltip="Thêm"
                                class="btn btn-primary btn-sm">
                            <i class="fa fa-plus"></i>
                        </button>
                    </th>
                </tr>
                <tr>
                    <th width="50">#</th>
                    <th> Chi nhánh cấp 1 <span class="text-danger">(*)</span></th>
                    <th> Chi nhánh cấp 2 </th>
                    <th> Chi nhánh cấp 3 </th>
                    <th> Chi nhánh cấp 4 </th>
                    <th> Chi nhánh cấp 5 </th>
                    <th> Chức danh <span class="text-danger">(*)</span></th>
                    <th width="50"></th>
                </tr>
            </thead>

            <tbody>
                <tr ng-repeat="item in newItem.UserDepartments | filter :{ Deleted:false }">
                    <td>
                        {{$index + 1}}
                    </td>
                    <td>
                        <select ui-select2
                                style="width:100%"
                                id="DepartmentId-{{$index}}"
                                placeholder="Chi nhánh cấp 1"
                                name="DepartmentId"
                                validation="required"
                                ng-options="item.Id as item.Name for item in InitData.Departments | filter :{ParentId:InitData.DepartmentMain.Id}"
                                ng-model="item.DepartmentId"
                                ng-change="changeDepartment(item)"
                                class="form-control"></select>
                    </td>
                    <td>
                        <select ui-select2
                                style="width:100%"
                                id="Department2Id-{{$index}}"
                                placeholder="Chi nhánh cấp 2"
                                name="Department2Id"
                                ng-options="item.Id as item.Name for item in item.department2s"
                                ng-change="changeDepartment2(item)"
                                ng-model="item.Department2Id"
                                class="form-control"></select>
                    </td>
                    <td>
                        <select ui-select2
                                style="width:100%"
                                id="Department3Id-{{$index}}"
                                placeholder="Chi nhánh cấp 3"
                                name="Department3Id"
                                ng-options="item.Id as item.Name for item in item.department3s"
                                ng-change="changeDepartment3(item)"
                                ng-model="item.Department3Id"
                                class="form-control"></select>
                    </td>
                    <td>
                        <select ui-select2
                                style="width:100%"
                                id="Department4Id-{{$index}}"
                                placeholder="Chi nhánh cấp 4"
                                name="Department4Id"
                                ng-options="item.Id as item.Name for item in item.department4s"
                                ng-change="changeDepartment4(item)"
                                ng-model="item.Department4Id"
                                class="form-control"></select>
                    </td>
                    <td>
                        <select ui-select2
                                style="width:100%"
                                id="Department5Id-{{$index}}"
                                placeholder="Chi nhánh cấp 5"
                                name="Department5Id"
                                ng-options="item.Id as item.Name for item in item.department5s"
                                ng-model="item.Department5Id"
                                class="form-control"></select>
                    </td>
                    <td>
                        <select ui-select2
                                style="width:100%"
                                id="JobTitleId-{{$index}}"
                                placeholder="Chức danh"
                                name="JobTitleId"
                                validation="required"
                                ng-options="item.Id as item.Name for item in InitData.JobTitles"
                                ng-model="item.JobTitleId"
                                class="form-control"></select>
                    </td>
                    <td class="text-right">
                        <button type="button"
                                ng-click="onDeleteItem(item)"
                                uib-tooltip="Xóa"
                                class="btn btn-danger btn-sm">
                            <i class="fa fa-trash"></i>
                        </button>
                    </td>
                </tr>
            </tbody>

            <tfoot>
              
            </tfoot>
        </table>
    </div>
</div>