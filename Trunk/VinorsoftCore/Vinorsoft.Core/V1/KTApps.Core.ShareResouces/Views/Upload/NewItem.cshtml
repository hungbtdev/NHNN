@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="uploadCtrl"
     ng-init="onInit()">
    <div class="card o-hidden border-0 shadow-lg p-2">
        <div block-ui="uiBlock">
            @await Html.PartialAsync("_FormTitle")

            <form name="newForm"
                  id="newForm"
                  class="user">

                <!--Mã/Tên-->
                <div class="form-group row">
                    <div class="col-sm-3">
                        <label for="Code"
                               class="col-form-label">
                            Mã <span class="text-danger">(*)</span>
                        </label>
                        <input type="text"
                               class="form-control"
                               ng-model="newItem.Code"
                               name="Code"
                               validation="required|max_len:128"
                               placeholder="Mã">
                    </div>

                    <div class="col-sm-9">
                        <!--Mã/Tên-->
                        <label for="UploadFile"
                               class="col-form-label">
                            Chọn file <span class="text-danger">(*)</span>
                        </label>

                        <input type="file"
                               class="form-control"
                               accept=".csv, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel"
                               name="UploadFile"
                               onchange="angular.element(this).scope().Upload()"
                               file-model="newItem.File"
                               placeholder="Chọn file" />
                    </div>
                </div>

                <!--Mô tả-->
                <div class="form-group row">
                    <div class="col-md-12">
                        <label for="Description"
                               class="col-form-label">
                            Mô tả
                        </label>
                        <textarea rows="3"
                                  class="form-control"
                                  ng-model="newItem.Description"
                                  name="Description"
                                  validation="max_len:4000"
                                  placeholder="Mô tả"></textarea>
                    </div>
                </div>

                <!--Button Save-->
                @await Html.PartialAsync("_CatalogueButtons")

            </form>
        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_CatalogueScripts")
    <script src="~/js/controllers/uploadCtrl.js"></script>
}
