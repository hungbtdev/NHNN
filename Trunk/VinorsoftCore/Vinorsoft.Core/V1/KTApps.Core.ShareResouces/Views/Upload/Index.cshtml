@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="coreCtrl">


    <div class="card o-hidden border-0 shadow-lg p-2">
        <div class="card-body p-0" block-ui="uiBlock" ng-init="onGetData()">
            @await Html.PartialAsync("_FormTitle")

            @await Html.PartialAsync("_FormSearch")

            <div class="row">
                <div class="col-lg-12">
                    <table class="table table-hover table-bordered">
                        <thead>
                            <tr>
                                <th width="50">#</th>
                                <th>Mã</th>
                                <th>Tên </th>
                                <th>Mô tả</th>
                                <th width="50"></th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr ng-repeat="item in dataPage.Items">
                                <td>
                                    {{$index + 1}}
                                </td>
                                <td>
                                    <a href="@Url.Action("DownloadFile")?fileId={{item.Id}}">
                                        {{item.Code}}
                                    </a>
                                </td>
                                <td>
                                    {{item.Name}}
                                </td>
                                <td>
                                    {{item.Description}}
                                </td>
                                <td class="text-right">
                                    <button type="button"
                                            ng-click="onDelete(item)"
                                            uib-tooltip="Xóa"
                                            class="btn btn-danger btn-sm">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        </tbody>

                    </table>
                </div>
            </div>

            @await Html.PartialAsync("_FormFooter")

            @await Html.PartialAsync("_FormPaging")

        </div>
    </div>

</div>

@section Scripts{
    @await Html.PartialAsync("_CatalogueScripts")
}

