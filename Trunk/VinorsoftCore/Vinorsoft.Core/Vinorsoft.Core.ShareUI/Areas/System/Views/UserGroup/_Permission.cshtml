@model UserGroupDTO

@(Html.DevExtreme().TreeView()
            .DataSource(d => d.Mvc().LoadAction("GetPermit").LoadParams(new { userGroupId = Model.Id}))
            .DisplayExpr("Name")
            .ItemsExpr("Items")
            .ID("TreeView")
            .SelectedExpr("Checked")
            .ExpandedExpr("Expanded")
            .Width(320)
            .ExpandEvent(TreeViewExpandEvent.Click)
            .ShowCheckBoxesMode(TreeViewCheckBoxMode.Normal)
)