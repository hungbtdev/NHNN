@{
    Layout = "_AuthLayout";
}

@model LoginDTO
<style>
    body {
        background-image: url('@Url.Action("ImageWithCode", "Galery", new { code="LoginBg", Area = "Media" })') !important;
        background-repeat: no-repeat !important;
        background-size: cover !important;
    }
</style>

@await Html.PartialAsync("_Style")

<div class="container">
    @await Html.PartialAsync("_ErrorAlert")

    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="login-form form ">

                @await Component.InvokeAsync("FormTitle")

                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { Area = "System", id = "login" }))
                {
                    @Html.HiddenFor(e => e.ReturnUrl)
                    @Html.HiddenFor(e => e.SubDomain)
                    using (Html.DevExtreme().ValidationGroup())
                    {
                        <div class="form-group">
                            <div class="dx-field">
                                <div class="dx-field-label">@Resources.Login_UserName</div>
                                <div class="dx-field-value">
                                    @(Html.DevExtreme().TextBox()
                                                                                        .Placeholder(Resources.Login_UserName)
                                                                                        .ShowClearButton(true)
                                                                                        .Name("UserName")
                                                                                        .Value(Model.UserName)
                                    )
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="dx-field">
                                <div class="dx-field-label">@Resources.Login_Password</div>
                                <div class="dx-field-value">
                                    @(Html.DevExtreme().TextBox()
                                                                                     .Placeholder(Resources.Login_Password)
                                                                                     .ShowClearButton(true)
                                                                                     .Name("Password")
                                                                                     .Mode(TextBoxMode.Password)
                                                                                     .Value(Model.Password)
                                    )
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 text-right ">
                            @(Html.DevExtreme().Button()
                                                                                     .ID("logIn")
                                                                                     .Text(Resources.Login_Submit)
                                                                                     .Type(ButtonType.Normal)
                                                                                     .UseSubmitBehavior(true)
                            )
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>